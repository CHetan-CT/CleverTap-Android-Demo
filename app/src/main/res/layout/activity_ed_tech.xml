<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".pe_et.EdTechActivity">

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Progress"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="tv_header" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_1"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="32dp"
            android:clickable="true"
            android:elevation="6dp"
            android:focusable="true"
            android:src="@drawable/done"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/barrier_header"
            app:shapeAppearanceOverlay="@style/circleImageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day 1"
            app:layout_constraintEnd_toEndOf="@+id/img_1"
            app:layout_constraintStart_toStartOf="@+id/img_1"
            app:layout_constraintTop_toBottomOf="@id/img_1" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_2"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="32dp"
            android:clickable="true"
            android:elevation="6dp"
            android:focusable="true"
            android:src="@drawable/multimedia"
            app:layout_constraintEnd_toStartOf="@id/img_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_1"
            app:shapeAppearanceOverlay="@style/circleImageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day 2"
            app:layout_constraintEnd_toEndOf="@+id/img_2"
            app:layout_constraintStart_toStartOf="@+id/img_2"
            app:layout_constraintTop_toBottomOf="@id/img_2" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:clickable="true"
            android:elevation="6dp"
            android:focusable="true"
            android:src="@drawable/padlock"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_2"
            app:layout_constraintTop_toTopOf="@id/img_2"
            app:shapeAppearanceOverlay="@style/circleImageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day 3"
            app:layout_constraintEnd_toEndOf="@+id/img_3"
            app:layout_constraintStart_toStartOf="@+id/img_3"
            app:layout_constraintTop_toBottomOf="@id/img_3" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="img_2,img_3" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="32dp"
            android:clickable="true"
            android:elevation="6dp"
            android:focusable="true"
            android:src="@drawable/padlock"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_constraintEnd_toStartOf="@+id/img_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barrier"
            app:shapeAppearanceOverlay="@style/circleImageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day 4"
            app:layout_constraintEnd_toEndOf="@+id/img_4"
            app:layout_constraintStart_toStartOf="@+id/img_4"
            app:layout_constraintTop_toBottomOf="@id/img_4" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:clickable="true"
            android:elevation="6dp"
            android:focusable="true"
            android:src="@drawable/padlock"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_constraintEnd_toStartOf="@+id/img_6"
            app:layout_constraintStart_toEndOf="@+id/img_4"
            app:layout_constraintTop_toTopOf="@+id/img_4"
            app:shapeAppearanceOverlay="@style/circleImageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day 5"
            app:layout_constraintEnd_toEndOf="@+id/img_5"
            app:layout_constraintStart_toStartOf="@+id/img_5"
            app:layout_constraintTop_toBottomOf="@id/img_5" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:clickable="true"
            android:elevation="6dp"
            android:focusable="true"
            android:src="@drawable/padlock"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_5"
            app:layout_constraintTop_toTopOf="@+id/img_4"
            app:shapeAppearanceOverlay="@style/circleImageView" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day 6"
            app:layout_constraintEnd_toEndOf="@+id/img_6"
            app:layout_constraintStart_toStartOf="@+id/img_6"
            app:layout_constraintTop_toBottomOf="@id/img_6" />

        <Button
            android:id="@+id/cta_continue"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_margin="32dp"
            android:background="#5cb85c"
            android:text="Continue learning"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>