<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".pe_et.EdTechListActivity">

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--<ImageView
            android:id="@+id/image_user"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:tint="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/circleImageView"
            app:srcCompat="@drawable/ic_account_circle_black_24dp" />-->

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="tv_header" />

        <View
            android:id="@+id/card_red"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:background="#D9534F"
            app:layout_constraintTop_toBottomOf="@+id/barrier_header" />

        <TextView
            android:id="@+id/title_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="6dp"
            android:text="Spanish"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="@+id/card_red"
            app:layout_constraintTop_toTopOf="@+id/card_red" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            android:text="Progress: 50 %"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@id/title_red"
            app:layout_constraintTop_toBottomOf="@+id/title_red" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="32dp"
            android:elevation="6dp"
            android:src="@drawable/spanish"
            app:layout_constraintBottom_toBottomOf="@+id/card_red"
            app:layout_constraintEnd_toEndOf="@id/card_red"
            app:layout_constraintTop_toTopOf="@id/card_red" />

        <View
            android:id="@+id/card_green"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#5cb85c"
            android:elevation="2dp"
            app:layout_constraintTop_toBottomOf="@+id/card_red" />

        <TextView
            android:id="@+id/title_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="6dp"
            android:text="German"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="@+id/card_green"
            app:layout_constraintTop_toTopOf="@+id/card_green" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            android:text="Progress: 30 %"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@id/title_green"
            app:layout_constraintTop_toBottomOf="@+id/title_green" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="32dp"
            android:elevation="6dp"
            android:src="@drawable/german"
            app:layout_constraintBottom_toBottomOf="@+id/card_green"
            app:layout_constraintEnd_toEndOf="@id/card_green"
            app:layout_constraintTop_toTopOf="@id/card_green" />

        <View
            android:id="@+id/card_gray"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#5E5050"
            android:elevation="4dp"
            app:layout_constraintTop_toBottomOf="@+id/card_green" />

        <TextView
            android:id="@+id/title_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="6dp"
            android:text="Italian"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="@+id/card_gray"
            app:layout_constraintTop_toTopOf="@+id/card_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            android:text="Progress: 0 %"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@id/title_gray"
            app:layout_constraintTop_toBottomOf="@+id/title_gray" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="32dp"
            android:elevation="6dp"
            android:src="@drawable/italian"
            app:layout_constraintBottom_toBottomOf="@+id/card_gray"
            app:layout_constraintEnd_toEndOf="@id/card_gray"
            app:layout_constraintTop_toTopOf="@id/card_gray" />

        <View
            android:id="@+id/card_blue"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#428bca"
            android:elevation="6dp"
            app:layout_constraintTop_toBottomOf="@+id/card_gray" />

        <TextView
            android:id="@+id/title_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="6dp"
            android:text="French"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="@+id/card_blue"
            app:layout_constraintTop_toTopOf="@+id/card_blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            android:text="Progress: 0 %"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@id/title_blue"
            app:layout_constraintTop_toBottomOf="@+id/title_blue" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="32dp"
            android:elevation="6dp"
            android:src="@drawable/french"
            app:layout_constraintBottom_toBottomOf="@+id/card_blue"
            app:layout_constraintEnd_toEndOf="@id/card_blue"
            app:layout_constraintTop_toTopOf="@id/card_blue" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>